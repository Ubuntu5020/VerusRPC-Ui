<div class="offcanvas offcanvas-bottom h-auto" tabindex="-1" id="offcanvasConversions">
  <div class="offcanvas-header m-0 p-2">
    <h5 class="card-title m-0 p-0">
    Conversions Monitor
    </h5>
    <button type="button" class="btn-close px-2 py-0" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body mx-0">
    <div class="accordion accordion-flush" id="accordionConversions">
      {% assign rlist = vars.conversions | reverse %}
      {% for c in rlist %}
        <div class="accordion-item">{% include 'conversionsrow', id:forloop.index %}</div>
      {% endfor %}
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
  $('.clear-uid').on('click', function (e) {
    e.preventDefault();
    let request=$.ajax({
      url: $(this).attr("href"),
      type: "GET",
      success: function (rsp) {
        alert("Success: " + rsp);
        location.reload();
      },
      error: function (err) {
        alert("Fatal: " + err);
      }
    });
  });
});
</script>

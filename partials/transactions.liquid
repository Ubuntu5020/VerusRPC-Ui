<div class="offcanvas offcanvas-bottom h-auto" tabindex="-1" id="offcanvasTransactions">
  <div class="offcanvas-header m-0 p-2">
    <h5 class="card-title m-0 p-0">
    Transaction ID Monitor
    </h5>
    <button type="button" class="btn-close px-2 py-0" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body mx-0">
    <div class="accordion accordion-flush" id="accordionTransactions">
      {% for tx in vars.txids %}
        <div class="accordion-item">{% include 'transactionsrow', id:forloop.index %}</div>
      {% endfor %}
    </div>
  </div>
</div>
